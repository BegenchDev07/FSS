---
import { markdownify } from "@/lib/utils/textConverter";


type Props = {
  content: {
    enable?: boolean;
    name: string;
    description?: string;
    contact: {
      phone: string;
      email: string;
    };
    details: string[];
    button?: {
      enable?: boolean;
      label?: string;
      url?: string;
      hoverEffect?: string;
      variant?: string;
      rel?: string;
      target?: string;
    };
  };
};

const { content } = Astro.props;
const { enable = true, name, description, contact, details, button } = content;

if (!enable) {
  return null;
}
---

<div class="group relative overflow-hidden rounded-xl border border-border bg-card p-8 shadow-sm transition-all duration-300 hover:shadow-lg">
  <!-- Office Name -->
  <div class="mb-4">
    <h3 class="text-xl font-bold text-foreground" set:html={markdownify(name)} />
    {description && (
      <p class="mt-2 text-sm text-muted-foreground" set:html={markdownify(description)} />
    )}
  </div>

  <!-- Contact Information -->
  <div class="mb-6 space-y-3">
    <div class="flex items-center space-x-3">
      <svg class="h-5 w-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
      </svg>
      <a href={`tel:${contact.phone.replace(/\s/g, '')}`} class="text-sm font-medium text-foreground hover:text-primary transition-colors">
        {contact.phone}
      </a>
    </div>

    <div class="flex items-center space-x-3">
      <svg class="h-5 w-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
      </svg>
      <a href={`mailto:${contact.email}`} class="text-sm font-medium text-foreground hover:text-primary transition-colors">
        {contact.email}
      </a>
    </div>
  </div>

  <!-- Office Details -->
  <div class="mb-6">
    <ul class="space-y-2">
      {details.map((detail) => (
        <li class="flex items-start space-x-3">
          <svg class="mt-0.5 h-4 w-4 text-primary flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
          </svg>
          <span class="text-sm text-muted-foreground" set:html={markdownify(detail)} />
        </li>
      ))}
    </ul>
  </div>

  <!-- Action Button -->
</div>
